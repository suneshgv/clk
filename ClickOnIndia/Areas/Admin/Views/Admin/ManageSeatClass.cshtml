@model ClickOnIndia.Areas.Admin.Models.SeatModel

@{
    ViewBag.Title = "ManageSeat";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ClickOnIndia.App_Start.Common objCommon = new ClickOnIndia.App_Start.Common();
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="offset-md-1 col-md-10">

            <div class="card">
                <div class="card-header bg-secondary">
                    <strong class="card-title text-center">Manage Seat Class</strong>
                </div>
                <div class="card-body">

                    @if (Model.RESULT != null && Model.RESULT != "")
                    {
                        <div class="row form-group">
                            <div class="col col-md-12 strong text-danger text-center">
                                @Model.RESULT
                            </div>
                        </div>
                    }

                    @Html.HiddenFor(m => m.SEAT_ID)

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="text-input" class=" form-control-label">Seat Name</label>
                        </div>
                        <div class="col-12 col-md-9">
                            @Html.TextBoxFor(m => m.SEAT_NAME, new { @class = " form-control form-control-sm" })
                            <small class="form-text text-muted">@Html.ValidationMessageFor(m => m.SEAT_NAME, String.Empty, new { @class = "text-danger" })</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="text-input" class=" form-control-label">Seat Type</label>
                        </div>
                        <div class="col-12 col-md-9">
                            @Html.DropDownListFor(m => m.TYPE, new SelectList(objCommon.GetSeatClassType(), "ID", "VALUE"), "Select Type", new { @class = "form-control form-control-sm" })
                            <small class="form-text text-muted">@Html.ValidationMessageFor(m => m.TYPE, String.Empty, new { @class = "text-danger" })</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="text-input" class=" form-control-label">Compartments</label>
                        </div>
                        <div class="col-12 col-md-9">
                            @Html.DropDownListFor(m => m.COMP_ID, new SelectList(objCommon.GetCompartments(), "ID", "VALUE"), "Select Compartment", new { @class = "form-control form-control-sm" })
                            <small class="form-text text-muted">@Html.ValidationMessageFor(m => m.COMP_ID, String.Empty, new { @class = "text-danger" })</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="text-input" class=" form-control-label">Count</label>
                        </div>
                        <div class="col-12 col-md-9">
                            @Html.TextBoxFor(m => m.COUNT, new { @class = " form-control form-control-sm" })
                            <small class="form-text text-muted">@Html.ValidationMessageFor(m => m.COUNT, String.Empty, new { @class = "text-danger" })</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="text-input" class=" form-control-label">Cost for Adult</label>
                        </div>
                        <div class="col-12 col-md-9">
                            @Html.TextBoxFor(m => m.ADULT_COST, new { @class = " form-control form-control-sm" })
                            <small class="form-text text-muted">@Html.ValidationMessageFor(m => m.ADULT_COST, String.Empty, new { @class = "text-danger" })</small>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="text-input" class=" form-control-label">Cost for Child</label>
                        </div>
                        <div class="col-12 col-md-9">
                            @Html.TextBoxFor(m => m.CHILD_COST, new { @class = " form-control form-control-sm" })
                            <small class="form-text text-muted">@Html.ValidationMessageFor(m => m.CHILD_COST, String.Empty, new { @class = "text-danger" })</small>
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                    <button type="button" class="btn btn-danger btn-sm" onClick="window.location.reload();">
                        <i class="fa fa-ban"></i> Reset
                    </button>
                </div>
            </div>
        </div>
    </div>
}

