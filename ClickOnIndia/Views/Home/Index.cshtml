@section script{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            $("#from-placeTr,#to-placeTr").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("GetTrainLoc", "Home")',
                        dataType: "json",
                        data: {
                            q: request.term
                        },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.Name, value: item.Name, id: item.Roid };
                            }));
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {
                    $('#' + event.target.id + 'Hdn').val(ui.item.id)
                },
                open: function () {
                    $(this).removeClass("ui-corner-all").addClass("ui-corner-top");
                },
                close: function () {
                    $(this).removeClass("ui-corner-top").addClass("ui-corner-all");
                }
            });

            $("#hotel-from-place").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("GetHotelLoc", "Home")',
                        dataType: "json",
                        data: {
                            q: request.term
                        },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.Name, value: item.Name, id: item.Roid };
                            }));
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {
                    $('#' + event.target.id + 'Hdn').val(ui.item.id)
                },
                open: function () {
                    $(this).removeClass("ui-corner-all").addClass("ui-corner-top");
                },
                close: function () {
                    $(this).removeClass("ui-corner-top").addClass("ui-corner-all");
                }
            });

        });
    </script>
}