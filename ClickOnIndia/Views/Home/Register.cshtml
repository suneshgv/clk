@model ClickOnIndia.Models.tbl_UserDetail

@{
    ViewBag.Title = "Register";

}

@*<h2>Register</h2>*@


@using (Html.BeginForm())
{



    <div class="container">
        <div class="col-md-9 tabulation" style="margin-top:40px;padding: 25px;">
            <div class="row">
                <div class="col-md-12 strong text-danger text-center">
                    @ViewBag.Msg
                </div>
            </div>
            <h2>Register</h2>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="text-input" class="input-field">UserName</label>
                </div>
                <div class="col-12 col-md-9">
                    @Html.TextBoxFor(x => x.UserName, new { @class = " form-control form-control-sm input-field" })
                    @Html.ValidationMessageFor(m => m.UserName, String.Empty, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Password</label>
                </div>
                <div class="col-12 col-md-9">
                    @Html.PasswordFor(x => x.Password, new { @class = " form-control form-control-sm" })
                    @Html.ValidationMessageFor(m => m.Password, String.Empty, new { @class = "text-danger" })                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Confirm Password</label>
                </div>
                <div class="col-12 col-md-9">
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = " form-control form-control-sm" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, String.Empty, new { @class = "text-danger" })                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Email</label>
                </div>
                <div class="col-12 col-md-9">
                    @Html.TextBoxFor(x => x.Email, new { @class = " form-control form-control-sm" })
                    @Html.ValidationMessageFor(m => m.Email, String.Empty, new { @class = "text-danger" })                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Phone</label>
                </div>
                <div class="col-12 col-md-9">
                    @Html.TextBoxFor(x => x.Phone, new { @class = " form-control form-control-sm" })
                    @Html.ValidationMessageFor(m => m.Phone, String.Empty, new { @class = "text-danger" })                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Address</label>
                </div>
                <div class="col-12 col-md-9">
                    @Html.TextAreaFor(x => x.Address, new { @class = " form-control form-control-sm" })
                    @Html.ValidationMessageFor(m => m.Address, String.Empty, new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="text-right">
                        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}